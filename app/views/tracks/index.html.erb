<div class="row">
  <div class="col-sm-6">
    <h1>Top 25 <small>- played artists</small></h1>
    <%= bar_chart charts_top_artist_scrobbles_path, height: '500px' %>
  </div>
  <div class="col-sm-6">
    <h1>Top 25 <small>- played tracks</small></h1>
    <%= bar_chart charts_top_track_scrobbles_path, height: '500px' %>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <h1>Top 25 <small>- Unique track count by artist</small></h1>
    <%= bar_chart charts_unique_tracks_by_artist_path, height: '670px' %>
  </div>
  <div class="col-sm-6">
    <h1>Scrobbles <small>- by day</small></h1>
    <%= line_chart charts_scrobbles_by_day_path %>
    <h1>Scrobbles <small>- by hour</small></h1>
    <%= bar_chart charts_scrobbles_by_hour_path %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <h1>Scrobbles <small>- by week</small></h1>
    <%= column_chart charts_scrobbles_by_week_path %>
  </div>
</div>

